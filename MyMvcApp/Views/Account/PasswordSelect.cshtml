@model MyMvcApp.Models.PasswordSelectViewModel

@{
    ViewData["Title"] = "Password selection";
}

<h2>@ViewData["Title"]</h2>

<form id="passwordForm" asp-action="PasswordSelect" method="post">
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" id="lastNameField" />
    </div>
    <div class="form-group">
        <label asp-for="BirthYear"></label>
        <input asp-for="BirthYear" class="form-control" id="birthYearField" />
    </div>
    <div class="form-group">
        <label asp-for="FavoriteColor"></label>
        <input asp-for="FavoriteColor" class="form-control" id="favoriteColorField" />
    </div>
    <div class="="form-group">
        <label asp-for="SelectedPassword">Select a Password</label>
        <select asp-for="SelectedPassword" class="form-control"
                asp-items="@(new SelectList(Model.Passwords))">
            <option value="">-- Select a Password --</option>
        </select>
    </div>


    <button type="submit" name="submitAction" value="next" class="btn btn-success">Next</button>
</form>